<table id="bc_inputsTable">
	<thead>
		<tr><th colspan="2">Inputs</th></tr>
	</thead>
	<tbody>
		{{# tx.inputs }}
		<tr>
			<td>{{{ address }}}</td>
			<td class="amount">{{ amount }} OMC</td>
		</tr>
		{{/ tx.inputs }}
	</tbody>
</table>
<table id="bc_outputsTable">
	<thead>
		<tr><th colspan="2">Outputs</th></tr>
	</thead>
	<tbody>
		{{# tx.outputs }}
		<tr>
			<td>{{{ address }}}</td>
			<td class="amount">{{ amount }} OMC</td>
		</tr>
		{{/ tx.outputs }}
	</tbody>
</table>
